/**
 * A sample data source using local sqlite db.
 * See how to use a different db: https://zenstack.dev/#/zmodel-data-source.
 */
datasource db {
    provider = 'sqlite'
    url = 'file:../../dev.db'
}

generator client {
    provider = "prisma-client-js"
}

